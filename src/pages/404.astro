---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title="404" description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="error-container">
				<div class="error-content">
					<h1>404</h1>
					<h2>ページが見つかりません</h2>
					<p class="description">お探しのページは存在しないか、移動された可能性があります。</p>
					<a href="/" class="primary-link">トップページへ</a>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
main {
	width: 1200px;
	max-width: calc(100% - 2em);
}

.error-container {
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 60vh;
}

.error-content {
	text-align: center;
	max-width: 600px;
	padding: 2rem;
}

.error-content h1 {
	font-size: 8rem;
	font-weight: 700;
	color: var(--accent);
	margin-bottom: 1rem;
	line-height: 1;
}

.error-content h2 {
	font-size: 2.5rem;
	color: rgb(var(--black));
	margin-bottom: 2rem;
	font-weight: 400;
}

.error-content .description {
	font-size: 1.1rem;
	line-height: 1.8;
	color: rgb(var(--gray-dark));
	margin-bottom: 3rem;
}

.action-links {
	display: flex;
	gap: 1rem;
	justify-content: center;
	flex-wrap: wrap;
}

.primary-link {
	display: inline-block;
	padding: 1rem 2rem;
	background-color: var(--accent);
	color: white;
	text-decoration: none;
	border-radius: 8px;
	font-weight: 700;
	transition: background-color 0.2s ease;
}

.primary-link:hover {
	background-color: var(--accent-dark);
	color: white;
	text-decoration: none;
}

@media (max-width: 860px) {
	.error-content {
		padding: 1rem;
	}

	.error-content h1 {
		font-size: 6rem;
	}

	.error-content h2 {
		font-size: 2rem;
	}

	.error-content .description {
		font-size: 1rem;
		margin-bottom: 2rem;
	}

	.action-links {
		flex-direction: column;
		align-items: center;
	}

	.primary-link {
		width: 100%;
		max-width: 300px;
		text-align: center;
	}
}

@media (max-width: 480px) {
	.error-content h1 {
		font-size: 4rem;
	}

	.error-content h2 {
		font-size: 1.5rem;
	}
}
</style>