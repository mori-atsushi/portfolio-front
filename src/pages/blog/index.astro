---
import BlogList from '../../layouts/BlogList.astro';
import { getSortedBlogPosts, BLOG_PAGE_SIZE } from '../../api/blog';

const allPosts = await getSortedBlogPosts();
const currentPage = 1;
const totalPages = Math.ceil(allPosts.length / BLOG_PAGE_SIZE);
const startIndex = (currentPage - 1) * BLOG_PAGE_SIZE;
const posts = allPosts.slice(startIndex, startIndex + BLOG_PAGE_SIZE);
---

<BlogList posts={posts} currentPage={currentPage} totalPages={totalPages} />
