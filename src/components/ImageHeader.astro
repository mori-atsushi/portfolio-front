---
interface Props {
	title: string;
	backgroundImage: ImageMetadata;
}

const { title, backgroundImage } = Astro.props;
---

<div class="page-header" style={`background-image: url(${backgroundImage.src})`}>
	<h1 class="page-title">{title}</h1>
</div>

<style>
.page-header {
	position: relative;
	width: 100%;
	height: 300px;
	display: flex;
	justify-content: center;
	align-items: center;
	overflow: hidden;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}

@media (max-width: 720px) {
	.page-header {
		height: 0;
		padding-bottom: 45%;
		position: relative;
	}
	
	.page-title {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		margin: 0;
	}
}

.page-title {
	color: #FFFFFF;
	text-shadow: var(--box-shadow);
	font-weight: 600;
	font-size: 4rem;
	margin: 0;
	text-align: center;
	z-index: 1;
}
</style>